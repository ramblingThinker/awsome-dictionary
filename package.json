{
  "name": "firefox-dictionary-ext",
  "version": "1.1.7",
  "private": true,
  "description": "Firefox extension for quick word definitions.",
  "scripts": {
    "lint": "eslint . --max-warnings=0",
    "test": "bash ./scripts/validate.sh && node --test ./tests/*.test.mjs",
    "check": "npm run lint && npm run test",
    "package:firefox": "bash ./scripts/package-firefox.sh",
    "package:macos-native": "bash ./scripts/package-macos-native-dmg.sh",
    "ship:firefox": "npm run check && npm run package:firefox",
    "release:tag": "bash ./scripts/tag-release.sh",
    "release:tag:push": "bash ./scripts/tag-release.sh --push"
  },
  "devDependencies": {
    "eslint": "^9.21.0",
    "jsdom": "^26.0.0"
  }
}
